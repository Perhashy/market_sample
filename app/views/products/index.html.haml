.header
  .header-item
    .header-item__main
      %a{href: root_path}
        = image_tag "logo.svg", size: "140x40"
      = form_with(local: true, method: :get, class: "form") do |form|
        = form.text_field :keyword, placeholder: "キーワードから探す", class: "form-input"
        %button{type: "submit", class: "form-submit"}
          .form-submit-icon
            = image_tag "icon-search.svg", size: "20x20"
    .header-item__nav
      .header-item__nav--left
        = link_to "カテゴリ", "#"
        = link_to "ブランド", "#", class: "brand"
      - if user_signed_in?
        .header-item__nav--right
          = link_to "ログアウト", destroy_user_session_path, method: :delete
      - else
        .header-item__nav--right
          = link_to "ログイン",  new_user_session_path
          = link_to "新規会員登録", new_user_registration_path, class: "signup"


= link_to '出品', new_product_path
%br/

